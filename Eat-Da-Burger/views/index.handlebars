<div class="container">
    <div class="row">
        <div class=col-md-4>
            <div id="notdevoured">
                <h4 id="lefttitle">Not Devoured</h4>
                <ol>
                    {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        <p class="burgername">{{this.burger_name}}</p>
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button class="dbutton" type="submit">Devour</button>
                        </form>
                    </li>
                    {{/unless}} {{/each}}
                </ol>
            </div>
        </div>
        <div class=col-md-4>
            <div id="burgerstuff">
                <h3 id="title">Eat-Da-Burger</h3>
                <img width="200px" height="200px" id="burgerpic" src="/assets/img/burger1.png" />
                <form class="create-update-form" action="/" method="POST">
                    <div id="burgerform" class="form-group">
                        <label for="ca">Add Burger:</label>
                        <input type="text" id="ca" name="burger_name">
                    </div>
                    <button class="addbutton" type="submit">Add Burger</button>
                </form>
            </div>
        </div>
        <div class=col-md-4>
            <div id="devoured">
                <h4 id="righttitle">Devoured</h4>
                <ol>
                    {{#each burgers}} {{#if this.devoured}}
                    <li class="devouredburger">
                        {{this.burger_name}}
                    </li>
                    {{/if}} {{/each}}
                </ol>
            </div>
        </div>
    </div>